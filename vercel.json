{
  "buildCommand": "bun run build",
  "devCommand": "bun run dev",
  "installCommand": "bun install",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_OPENROUTER_API_KEY": "@openrouter_api_key",
    "NEXT_PUBLIC_OPENROUTER_BASE_URL": "https://openrouter.ai/api/v1",
    "NEXT_PUBLIC_DEFAULT_MODEL": "qwen/qwen-2.5-72b-instruct:free",
    "NEXT_PUBLIC_N8N_WEBHOOK_URL": "@n8n_webhook_url",
    "NEXT_PUBLIC_API_BASE_URL": "https://story-ncp-generator.vercel.app/api"
  },
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
